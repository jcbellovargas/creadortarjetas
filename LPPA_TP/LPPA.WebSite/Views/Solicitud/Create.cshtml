@model Entities.Solicitud

@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Solicitud Tarjetas</title>
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css'>
    <link rel='stylesheet prefetch' href='http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css'>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />
</head>

<body>
    <div class="container">

        <form class="well form-horizontal" method="post" id="solicitud_form">
            @Html.AntiForgeryToken()
            <fieldset>

                <!-- Form Name -->
                <legend><center><h2><b>Solicitud Tarjeta de Credito</b></h2></center></legend><br>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label">Nombre</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.Persona.nombre, new { htmlAttributes = new { @placeholder = "Juan Martin", @class = "form-control" } } )                           
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Apellido</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.EditorFor(model => model.Persona.apellido, new { htmlAttributes = new { @placeholder = "Gonzalez", @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Sexo</label>
                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.DropDownListFor(model => model.Persona.sexo,  new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "Masculino", Value="Masculino"},
                                    new SelectListItem() {Text = "Femenimo", Value="Femenimo"},
                                }, new {  @class = "form-control selectpicker" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Fecha Nacimiento</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            @Html.EditorFor(model => model.Persona.fecha_nacimiento, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Tipo Documento</label>
                    <div class="col-md-4 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-credit-card"></i></span>
                            @Html.DropDownListFor(model => model.Persona.tipo_documento, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "DNI", Value="DNI"},
                                    new SelectListItem() {Text = "CUIL", Value="CUIL"},
                                }, new { @class = "form-control selectpicker" })
                        </div>
                    </div>
                </div>

                <!-- Text input-->

                <div class="form-group">
                    <label class="col-md-4 control-label">Nro DNI/CUIL</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-credit-card"></i></span>
                            @Html.EditorFor(model => model.Persona.nro_documento, new { htmlAttributes = new { @placeholder = "36482577", @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Domicilio</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                            @Html.EditorFor(model => model.Persona.domicilio, new { htmlAttributes = new { @placeholder = "Avenida Corrientes 3433, CABA", @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Situacion laboral</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                            @Html.DropDownListFor(model => model.Persona.situacion_laboral, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "Empleado", Value="Empleado"},
                                    new SelectListItem() {Text = "Desempleado", Value="Desempleado"},
                                }, new { @class = "form-control selectpicker" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Ingreso promedio</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
                            @Html.EditorFor(model => model.Persona.ingreso_promedio, new { htmlAttributes = new { @placeholder="$", @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Banco</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-info-sign"></i></span>
                            @Html.DropDownListFor(model => model.Persona.id_banco, (IEnumerable<SelectListItem>)ViewBag.id_banco, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label">Email</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.EditorFor(model => model.Persona.email, new { htmlAttributes = new { @placeholder = "juanmartin@mail.com", @class = "form-control", @type = "email" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Telefono</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                            @Html.EditorFor(model => model.Persona.telefono, new { htmlAttributes = new { @placeholder = "(0054)", @class = "form-control" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Documentacion adjunta</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-paperclip"></i></span>
                            @Html.EditorFor(model => model.Persona.documentacion_adjunta, new { htmlAttributes = new { @placeholder = "Adjuntar documentacion", @class = "form-control", @type = "file" } })
                         </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Foto</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-camera"></i></span>
                            @Html.EditorFor(model => model.Persona.foto, new { htmlAttributes = new { @placeholder = "Click para sacar foto", @class = "form-control foto" } })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Conyugue?</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-heart"></i></span>
                            @Html.DropDownList("conyugue", new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "No", Value="No"},
                                    new SelectListItem() {Text = "Si", Value="Si"},
                                }, new { @class = "form-control selectpicker" })
                        </div>
                    </div>
                </div>

                <hr><hr />
                <div id="conyugue_container" style="display: none;">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Nombre</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.nombre, new { htmlAttributes = new { @placeholder = "Juan Martin", @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Apellido</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.apellido, new { htmlAttributes = new { @placeholder = "Gonzalez", @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Sexo</label>
                        <div class="col-md-4 selectContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.DropDownListFor(model => model.Persona.Persona2.sexo, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "Masculino", Value="Masculino"},
                                    new SelectListItem() {Text = "Femenimo", Value="Femenimo"},
                                }, new { @class = "form-control selectpicker" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Fecha Nacimiento</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.fecha_nacimiento, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Tipo Documento</label>
                        <div class="col-md-4 selectContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-credit-card"></i></span>
                                @Html.DropDownListFor(model => model.Persona.Persona2.tipo_documento, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "DNI", Value="DNI"},
                                    new SelectListItem() {Text = "CUIL", Value="CUIL"},
                                }, new { @class = "form-control selectpicker" })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Nro DNI/CUIL</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-credit-card"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.nro_documento, new { htmlAttributes = new { @placeholder = "36482577", @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Domicilio</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.domicilio, new { htmlAttributes = new { @placeholder = "Avenida Corrientes 3433, CABA", @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Situacion laboral</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                                @Html.DropDownListFor(model => model.Persona.Persona2.situacion_laboral, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "Empleado", Value="Empleado"},
                                    new SelectListItem() {Text = "Desempleado", Value="Desempleado"},
                                }, new { @class = "form-control selectpicker" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Ingreso promedio</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.ingreso_promedio, new { htmlAttributes = new { @placeholder = "$", @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Banco</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-info-sign"></i></span>
                                @Html.DropDownListFor(model => model.Persona.Persona2.id_banco, (IEnumerable<SelectListItem>)ViewBag.id_banco, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label">Email</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.email, new { htmlAttributes = new { @placeholder = "juanmartin@mail.com", @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Telefono</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.telefono, new { htmlAttributes = new { @placeholder = "(0054)", @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Documentacion adjunta</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-paperclip"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.documentacion_adjunta, new { htmlAttributes = new { @placeholder = "Adjuntar documentacion", @class = "form-control", @type = "file" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Foto</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-camera"></i></span>
                                @Html.EditorFor(model => model.Persona.Persona2.foto, new { htmlAttributes = new { @placeholder = "Click para sacar foto", @class = "form-control foto" } })
                            </div>
                        </div>
                    </div>
                </div>
                

                <hr><hr />
                <div id="foto_dialog">
                    <button id="btn_foto" type="button" class="btn">Sacar Foto</button>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Entidad Tarjeta</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                            @Html.DropDownListFor(model => model.entidad_emisora, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "Visa", Value="VISA"},
                                    new SelectListItem() {Text = "Mastercard", Value="MASTERCARD"},
                                    new SelectListItem() {Text = "American Express", Value="AMEX"},
                                }, new { @class = "form-control selectpicker" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label">Terminal de Gestion</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-info-sign"></i></span>
                            @Html.DropDownListFor(model => model.id_terminal, (IEnumerable<SelectListItem>)ViewBag.id_terminal, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_terminal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <br>
                        <button type="submit" class="btn btn-warning">ENVIAR <span class="glyphicon glyphicon-send"></span></button>
                        <asp:Button ID="btnEnviar" Text="Enviar" OnClick="btnEnviar_Click" />
                    </div>
                </div>

            </fieldset>
        </form>
    </div>

    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="http://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>
